<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Trackings</h1>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @trackings.each do |tracking| %>
        <tr>
          <td><%= tracking.user.email %></td>
          <td><%= tracking.content %></td>
          <td><%= link_to 'Show', tracking %></td>
          <% if tracking.user == current_user %>
            <td><%= link_to 'Edit', edit_tracking_path(tracking) %></td>
            <td><%= link_to 'Destroy', tracking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <% if user_signed_in? %>
    <p><%= link_to 'New Tracking', new_tracking_path %></p>
  <% end %>
</div>
