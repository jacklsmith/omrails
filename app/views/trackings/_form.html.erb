<%= form_for(tracking) do |f| %>
  <% if tracking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tracking.errors.count, "error") %> prohibited this tracking from being saved:</h2>

      <ul>
      <% tracking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: "form-control", id: "duration-picker" %>
  </div>
  
  <%= collection_select(:project, :project_id, Project.all, :id, :title) %>
  
  <p>Missing the project? <%= link_to 'Add it', new_project_path %>.</p>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
